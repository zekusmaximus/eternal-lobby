@import 'open-props/postcss/style';

:root {
  --void-1: hsl(220deg 15% 12%);
  --void-2: hsl(220deg 20% 8%);
  --text-1: rgba(255 255 255 / 0.8);
  --text-2: rgba(255 255 255 / 0.6);
}

* {
  box-sizing: border-box;
  margin: 0;
  padding: 0;
}

@keyframes existential-flicker {
  0% { opacity: 0.8; }
  50% { opacity: 0.6; }
  100% { opacity: 0.8; }
}

body {
  animation: existential-flicker 60s infinite;
}